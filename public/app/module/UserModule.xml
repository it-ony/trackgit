<module:UserModuleClass xmlns="http://www.w3.org/1999/xhtml"
                      xmlns:module="app.module" xmlns:js="js.core" xmlns:ui="js.ui">

    <js:Content name="header">
    </js:Content>

    <js:Content name="main">
        <div class="container">
            <div class="row">
                <div class="span9">
                    <h3>Repositories</h3>
                    <ui:ListView>

                    </ui:ListView>
                </div>
                <div class="span3">
                    <div class="avatar">
                        <img src="{user.avatar_url}&amp;s=175" alt="{user.name}"/>
                    </div>
                    <div>
                        <div class="name">{user.name}</div>
                        <div class="blog" visible="{user.blog}">{user.blog}</div>
                    </div>
                </div>
            </div>
        </div>

    </js:Content>

</module:UserModuleClass>